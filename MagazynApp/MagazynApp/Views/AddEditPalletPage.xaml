<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagazynApp.Views.AddEditPalletPage"
             Title="AddEditPalletePage">
    
    <VerticalStackLayout Padding="10">
        <Entry Placeholder="Nazwa palety" Text="{Binding PalleteName}"/>
        <Entry Placeholder="Data utworzenia" IsEnabled="False" Text="{Binding PalleteCreatedAtLocal}"/>

        <Button Text="{Binding AddEditButtonTitle}" Command="{Binding AddEditPalleteCommand}" Margin="10"/>
        <Button Text="Anuluj" Command="{Binding CancelCommand}" Margin="10"/>

    </VerticalStackLayout>
</ContentPage>