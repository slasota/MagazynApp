<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagazynApp.Views.DodajProduktPage">

    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Nazwa produktu" Text="{Binding NazwaProduktu}"/>
        <Entry Placeholder="Kod kreskowy" Text="{Binding KodKreskowy}"/>

        <Button Text="{Binding TytulPrzycisku}" Command="{Binding DodajProduktCommand}"/>
        <Button Text="Anuluj" Command="{Binding AnulujCommand}"/>


    </VerticalStackLayout>
</ContentPage>