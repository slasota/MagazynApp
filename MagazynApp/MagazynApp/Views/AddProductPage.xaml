<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagazynApp.Views.AddProductPage">

    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Nazwa produktu" Text="{Binding ProductName}"/>
        <Entry Placeholder="Kod kreskowy" Text="{Binding BarCode}"/>

        <Button Text="{Binding ButtonLabel}" Command="{Binding AddOrUpdateProductCommand}"/>
        <Button Text="Anuluj" Command="{Binding CancelCommand}"/>


    </VerticalStackLayout>
</ContentPage>