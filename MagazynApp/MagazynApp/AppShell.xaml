<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MagazynApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MagazynApp.Views"
    Title="MagazynApp">

    <TabBar>
        <Tab Title="Strona Główna" Icon="home.png">
            <ShellContent
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
        </Tab>
        <Tab Title="Palety" Icon="pallet.png">
            <ShellContent
            ContentTemplate="{DataTemplate views:PalletPage}"
            Route="PaletyPage" />
        </Tab>
        <Tab Title="Produkty" Icon="package_2.png">
            <ShellContent
            ContentTemplate="{DataTemplate views:ProductsPage}"
            Route="ProduktyPage" />
        </Tab>
    </TabBar>

</Shell>
